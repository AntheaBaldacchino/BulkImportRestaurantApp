@using BulkImportRestaurantApp.Models
@using BulkImportRestaurantApp.Models.Interfaces
@model IEnumerable<IItemValidating>

@{
    var viewMode = (string?)ViewBag.ViewMode ?? "restaurants";
    var isVerify = viewMode.StartsWith("verify");
}

<h2>Catalog</h2>

<div class="mb-2">
    <a asp-action="Catalog" asp-route-view="restaurants" class="btn btn-outline-primary">
        Restaurants
    </a>

    <a asp-action="Catalog" asp-route-view="menu" class="btn btn-outline-secondary">
        Menu items
    </a>

    @if (isVerify)
    {
        <span class="badge bg-warning ms-2">Verification mode</span>
    }
</div>

@if (viewMode == "restaurants" || viewMode == "verify-restaurants")
{
    if (isVerify)
    {
        <form asp-action="Approve" method="post">
            <div class="row">
                @foreach (var item in Model.OfType<Restaurant>())
                {
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <input type="checkbox"
                                       name="restaurantIds"
                                       value="@item.Id" />
                                <partial name="@item.GetCardPartial()" model="item" />
                            </div>
                        </div>
                    </div>
                }
            </div>

            <button type="submit" class="btn btn-success">
                Approve selected
            </button>
        </form>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model.OfType<Restaurant>())
            {
                <div class="col-md-4 mb-3">
                    <partial name="@item.GetCardPartial()" model="item" />
                </div>
            }
        </div>
    }
}
else
{
    if (isVerify)
    {
        <form asp-action="Approve" method="post">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Restaurant</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OfType<MenuItem>())
                    {
                        <tr>
                            <td>
                                <input type="checkbox"
                                       name="menuItemIds"
                                       value="@item.Id" />
                            </td>
                            <partial name="@item.GetCardPartial()" model="item" />
                        </tr>
                    }
                </tbody>
            </table>

            <button type="submit" class="btn btn-success">
                Approve selected
            </button>
        </form>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Restaurant</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OfType<MenuItem>())
                {
                    <partial name="@item.GetCardPartial()" model="item" />
                }
            </tbody>
        </table>
    }
}
